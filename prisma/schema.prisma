generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
   id          Int       @default(autoincrement()) @id
   name        String
   email       String    @unique
   password    String
   role        String

   visites Visite[]
    
}


model Company {
   id          Int        @default(autoincrement()) @id
   name        String 
   address     String
   
   visites     Visite[]

}

model Visite {
  id            Int         @default(autoincrement()) @id
  date          DateTime
  report        String

  company       Company     @relation(fields: [companyId], references: [id])  
  companyId     Int

  inspector     User        @relation(fields: [inspectorId], references: [id])  
  inspectorId   Int


      


}
